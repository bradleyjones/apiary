doctype html
html
  head
    title Apiary
    include partials/head
    link(rel='stylesheet', href='/css/login.css')
  body
    .container.main-container
      img(src="/img/apiaryAvatarLarge.png" alt="Apiary Logo")
      form( method="post" action="/login").form-signin
        h2.form-signin-heading Please sign in
        input.form-control(type='text', name="user", placeholder='Username', required='required', autofocus='autofocus')
        input.form-control(type='password', name="password", placeholder='Password', required='required')
        button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
