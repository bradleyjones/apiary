doctype html
html
  head
    title Apiary
    include partials/head
    link(rel='stylesheet', href='/css/login.css')
  body
    .container.main-container
      form( method="post" action="/newuser").form-signin
        h2.form-signin-heading Sign up form
        input.form-control(type='text', name="user", placeholder='Username', required='required', autofocus='autofocus')
        input.form-control(type='password', name="password", placeholder='Password', required='required')
        button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign up
