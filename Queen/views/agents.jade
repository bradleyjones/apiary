doctype 5
html
  head
    title Apiary Agents
    include partials/head.jade
    script(src="/scripts/agents.js")
  body
    include partials/navbar
    // Make this page selected in the navbar
    script $("#agents_navbar").addClass("active")

    .jumbotron
      .container
        .col-sm-6
          .pulsing
            script(src="/scripts/d3/pulsing.js")
        .col-sm-6
          h1#total
          // button.btn.btn-primary.btn-lg#new New Agent
          // Button to trigger modal
          button.btn.btn-primary.btn-lg(data-toggle='modal', data-target='#newTargetModal')
            | Add New Target

    .container.main-container
      .panel.panel-default
        .panel-heading Currently Active Agents
        table.table#agent-table
          thead
            tr
              th ID
              th Machine ID
              th Take Offline

    // Modals
    #newTargetModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='addNewTarget', aria-hidden='true')
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-hidden='true') Ã—
            h4#newTargetModalLabel.modal-title Add New Target
          .modal-body
            | Choose a target file then select the agents to target
          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Close
            button.btn.btn-primary(type='button') Save changes


